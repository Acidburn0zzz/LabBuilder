<?xml version="1.0" encoding="utf-8"?>

<labbuilderconfig name="PesterTestConfig" version="1.0">
  <description>Configuration File Used with Pester Tests</description>
  
  <settings>
    <domainname>PESTER.LOCAL</domainname>
    <email>daniel@bmdlab.com</email>
    <vmpath>C:\Pester Lab</vmpath>
    <vhdparentpath>C:\Pester Lab\Virtual Hard Disk Templates</vhdparentpath>
    <macaddressminimum>001122334400</macaddressminimum>
    <macaddressmaximum>0011223344FF</macaddressmaximum>
  </settings>

  <dsc configpath="C:\PesterTestConfig DSC\" />

  <switches>
    <switch name="Pester Test External" type="External" >
      <adapters>
        <adapter name="Cluster" macaddress="00155D010701" />
        <adapter name="Management" macaddress="00155D010702" />
        <adapter name="SMB" macaddress="00155D010703" />
        <adapter name="LM" macaddress="00155D010704" />
      </adapters>
    </switch>
    <switch name="Pester Test Private Vlan" type="Private" vlan="2" />
    <switch name="Pester Test Private" type="Private" />
    <switch name="Pester Test Internal Vlan" type="Internal" vlan="3" />
    <switch name="Pester Test Internal" type="Internal" />
  </switches>

  <templates fromvm="pester template *">
    <template name="Pester Windows Server 2012 R2 Full"
              vhd="Windows Server 2012 R2 Datacenter Full.vhdx"
              installiso="Tests\DummyISO\9600.16384.130821-1623_x64fre_Server_EN-US_IRM_SSS_DV5.iso"
              edition="Windows Server 2012 R2 SERVERDATACENTER"
              allowcreate="Y"/>
    <template name="Pester Windows Server 2012 R2 Core"
              vhd="Windows Server 2012 R2 Datacenter Core.vhdx"
              installiso="Tests\DummyISO\9600.16384.130821-1623_x64fre_Server_EN-US_IRM_SSS_DV5.iso"
              edition="Windows Server 2012 R2 SERVERDATACENTERCORE"
              allowcreate="Y"/>
    <template name="Pester Windows 10 Enterprise"
              vhd="Windows 10 Enterprise.vhdx"
              installiso="Tests\DummyISO\10240.16384.150709-1700.TH1_CLIENTENTERPRISE_VOL_X64FRE_EN-US.iso"
              edition="Windows 10 Enterprise"
              allowcreate="Y"/>
  </templates>

  <vms>
    <vm name="PESTER.VM1" template="Template Windows Server 2012 R2 Datacenter Full">
      <usedifferencingbootdisk>Y</usedifferencingbootdisk>
      <datavhdsize>10GB</datavhdsize>
      <memorystartupbytes>1073741824</memorystartupbytes>
      <processorcount>1</processorcount>
      <adapters>
        <adapter name="Pester Test External" switchname="Pester Test External" macaddress="00155D010801" />
      </adapters>
      <administratorpassword>None</administratorpassword>
      <productkey>W3GGN-FT8W3-Y4M27-J84CP-Q3VJ9</productkey>
      <timezone>Pacific Standard Time</timezone>
      <dscconfig>VM1</dscconfig>
    </vm>

    <vm name="PESTER.VM2" template="Template Windows Server 2012 R2 Datacenter Full">
      <usedifferencingbootdisk>Y</usedifferencingbootdisk>
      <datavhdsize>10GB</datavhdsize>
      <memorystartupbytes>1073741824</memorystartupbytes>
      <processorcount>1</processorcount>
      <adapters>
        <adapter name="Pester Test External" switchname="Pester Test External" macaddress="00155D010801" />
      </adapters>
      <administratorpassword>None</administratorpassword>
      <productkey>W3GGN-FT8W3-Y4M27-J84CP-Q3VJ9</productkey>
      <timezone>Pacific Standard Time</timezone>
      <dscconfig>VM1</dscconfig>
    </vm>

    <vm name="PESTER.VM1" template="Template Windows Server 2012 R2 Datacenter Full">
      <usedifferencingbootdisk>Y</usedifferencingbootdisk>
      <datavhdsize>10GB</datavhdsize>
      <memorystartupbytes>1073741824</memorystartupbytes>
      <processorcount>1</processorcount>
      <adapters>
        <adapter name="Pester Test External" switchname="Pester Test External" macaddress="00155D010801" />
      </adapters>
      <administratorpassword>None</administratorpassword>
      <productkey>W3GGN-FT8W3-Y4M27-J84CP-Q3VJ9</productkey>
      <timezone>Pacific Standard Time</timezone>
      <dscconfig>VM1</dscconfig>
    </vm>

  </vms>
</labbuilderconfig>
<?xml version="1.0" encoding="utf-8"?>

<labbuilderconfig name="TestConfig1" version="1.0">
  <description>Simple Test Lab Configuration File 1</description>
  
  <settings>
    <domainname>BMDLAB.LOCAL</domainname>
    <email>daniel@bmdlab.com</email>
    <vmpath>c:\vm\BMDLAB.LOCAL</vmpath>
    <vhdparentpath>c:\vm\BMDLAB.LOCAL\Virtual Hard Disk Templates</vhdparentpath>
    <configpath>.\TestConfig1\</configpath>
  </settings>

  <switches>
    <switch name="General Purpose External" type="External">
      <adapters>
        <adapter name="Cluster" macaddress="00155D010701" />
        <adapter name="Management" macaddress="00155D010702" />
        <adapter name="SMB" macaddress="00155D010703" />
        <adapter name="LM" macaddress="00155D010704" />
      </adapters>
    </switch>
    <switch name="Domain Private Site A" type="Private" vlan="2" />
    <switch name="Domain Private Site B" type="Private" vlan="3" />
    <switch name="Domain Private Site C" type="Private" vlan="4" />
  </switches>

  <templates fromvm="template *">
    <template name="Template Windows Server 2012 R2 Datacenter Full">
      <memorystartupbytes>1GB</memorystartupbytes>
      <processorcount>1</processorcount>
      <administratorpassword>P@ssword!1</administratorpassword>
      <productkey>W3GGN-FT8W3-Y4M27-J84CP-Q3VJ9</productkey>
      <timezone>New Zealand Standard Time</timezone>      
    </template>
    <template name="Template Windows Server 2012 R2 Datacenter Core">
      <memorystartupbytes>1GB</memorystartupbytes>
      <processorcount>1</processorcount>
      <administratorpassword>P@ssword!1</administratorpassword>
      <productkey>W3GGN-FT8W3-Y4M27-J84CP-Q3VJ9</productkey>
      <timezone>New Zealand Standard Time</timezone>      
    </template>
    <template name="Pester Windows 10 Enterprise"> 
      <memorystartupbytes>1GB</memorystartupbytes>
      <processorcount>1</processorcount>
      <administratorpassword>P@ssword!1</administratorpassword>
      <productkey>W3GGN-FT8W3-Y4M27-J84CP-Q3VJ9</productkey>
      <timezone>New Zealand Standard Time</timezone>      
    </template>
  </templates>

  <vms>
    <vm name="BMDLAB.LOCAL SS_ROOTCA" template="Template Windows Server 2012 R2 Datacenter Full">
      <computername>SS_ROOTCA</computername>
      <usedifferencingbootdisk>Y</usedifferencingbootdisk>
      <adapters>
        <adapter name="General Purpose External" switchname="General Purpose External" macaddress="00155D010801" />
      </adapters>
      <dsc configname="SS_ROOTCA" configfile="SS_ROOTCA.DSC.ps1" />
      <unattendfile></unattendfile>
      <setupcomplete>SS_ROOTCA.SetupComplete.ps1</setupcomplete>
    </vm>
  </vms>

</labbuilderconfig>